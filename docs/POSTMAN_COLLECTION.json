        {
          "name": "Generate Carousel",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has carousel ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.environment.set(\"CAROUSEL_ID\", jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Carousel has slides\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.slides).to.be.an('array');",
                  "    pm.expect(jsonData.slides.length).to.be.at.least(5);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
