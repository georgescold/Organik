    {
      "name": "Rate Limiting Tests",
      "item": [
        {
          "name": "Test Rate Limit (Run 101 times)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var iteration = pm.variables.get(\"iteration\") || 0;",
                  "iteration++;",
                  "pm.variables.set(\"iteration\", iteration);",
                  "",
                  "if (iteration <= 100) {",
                  "    pm.test(\"Request \" + iteration + \" - Status 200\", function () {",
                  "        pm.response.to.have.status(200);",
                  "    });",
                  "} else {",
                  "    pm.test(\"Request \" + iteration + \" - Status 429 (Rate Limited)\", function () {",
                  "        pm.response.to.have.status(429);",
                  "    });",
                  "    pm.test(\"Has resetAt timestamp\", function () {",
                  "        var jsonData = pm.response.json();",
                  "        pm.expect(jsonData).to.have.property('resetAt');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
